<p id="notice"><%= notice %></p>

<h1>Listing Electives</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Name</th>
      <th>Description</th>
      <th>Teacher</th>
      <th>Students</th>
      <th>Unit 1</th>
      <th>Unit 2</th>
      <th>Unit 3</th>
      <th>Unit 4</th>
      <th>Unit 5</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @electives.each do |elective| %>
      <tr>
        <td><%= elective.course_id %></td>
        <td><%= elective.name %></td>
        <td><%= elective.description %></td>
        <td><%= elective.teacher %></td>
        <td><%= elective.students %></td>
        <td><%= elective.unit_1 %></td>
        <td><%= elective.unit_2 %></td>
        <td><%= elective.unit_3 %></td>
        <td><%= elective.unit_4 %></td>
        <td><%= elective.unit_5 %></td>
        <td><%= link_to 'Show', elective %></td>
        <td><%= link_to 'Edit', edit_elective_path(elective) %></td>
        <td><%= link_to 'Destroy', elective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

